# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here  # Required for backend
VITE_OPENAI_API_KEY=your_api_key_here  # Required for frontend

# Model Configuration
MODEL_NAME=gpt-4o-realtime-preview-2024-10-01

# Server Configuration
PORT=8000
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:5173

# WebSocket Configuration
WEBSOCKET_URL=wss://api.openai.com/v1/realtime
VITE_WEBSOCKET_URL=wss://api.openai.com/v1/realtime

# Frontend Configuration
VITE_BACKEND_URL=http://localhost:8000

# Document Management
UPLOAD_DIR=./data/documents
MAX_FILE_SIZE=50000000  # 50MB
ALLOWED_FILE_TYPES=pdf,txt,doc,docx

# RAG Configuration
VECTOR_DB_PATH=./data/vector_store
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Sentence transformer model for embeddings

# Audio Configuration
MAX_AUDIO_DURATION=300  # Maximum duration in seconds for voice input
SUPPORTED_AUDIO_FORMATS=wav,mp3,ogg
